{% extends 'layout/basic.html.twig' %}

{% block navigation %}

    <!-- Main Menu Section -->
    <section class="menu">
        <nav class="navbar navigation background-blue">
            <div class="container">
                <!-- Navbar Links -->
                <div id="navbar" class="navbar-collapse collapse text-center">
                    <ul class="nav navbar-nav ">

                        <!-- Home -->
                        <li class="dropdown">
                            <a href="{{ url('home') }}" >Accueil</a>
                        </li><!-- / Home -->

                        <!--About--->

                        <li class="dropdown ">
                            <a href ="{{ url('about') }}">A propos</a>
                        </li>

                        <!--Contact--->
                        <li class="dropdown ">
                            <a href="{{ url('contact') }}">Contact</a>
                        </li>
                        <!-- Inscription -->
                        {% if app.user %}
                            <li class="dropdown ">
                        {% if is_granted("ROLE_ADMIN") %}
                            <a  href="{{ url('admin-home') }}"><i class="fa-solid fa-user"></i></a>
                        {% elseif is_granted ("ROLE_HOSPITAL")%}
                            <a href="{{ url('partnersHospitalHome') }}"><i class="fa-solid fa-user"></i></a>
                        {% elseif is_granted("ROLE_USER") %}
                            <a  href="{{ url('user-home') }}"><i class="fa-solid fa-user"></i></a>
                        {% endif %}
                        {% else %}
                        <li class="dropdown ">
                            <a href="{{ url('register') }}">Inscription</a>
                        </li>
                        {% endif %}
                        <!-- Connexion ou déconnexion  -->
                        {% if app.user %}
                            <li class="dropdown">
                                <a  href="{{ url('app_logout') }}">Déconnexion</a>
                            </li>

                        {% else %}
                            <li class="dropdown ">
                                <a href="{{ url('app_login') }}">Connexion</a>
                            </li>
                        {% endif %}


                    </ul><!-- / .nav .navbar-nav -->

                </div>
                <!--/.navbar-collapse -->
            </div><!-- / .container -->
        </nav>
    </section>

{% endblock %}

{% block content %}
{% endblock %}