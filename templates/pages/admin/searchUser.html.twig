{% extends 'layout/admin.html.twig' %}

{% block content %}
    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="content">
                        <h1 class="page-name"> Médecins</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="page-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="padding">
                        <aside class="sidebar">
                            <div class="widget widget-subscription">
                                <h4 class="widget-title">Rechercher un médecin</h4>
                            </div>
                                {% set searchUserForm = getSearchUserForm() %}
                                {{ form_start(searchUserForm) }}
                                {{ form_widget(searchUserForm.keyword) }}
                                {{ form_end(searchUserForm) }}

                        </aside>
                        </div>
                    </div>
                    <div class="col-md-8">
                        {% for user in users %}
                            <div class="dashboard-user-profile">
                                <div class="media">
                                    <div class="pull-left text-center" href="#!">
                                        <img class="media-object user-img" src="{{ asset('/images/uploads/' ~user.photo.url) }}" alt="Image de profil">
                                    </div>
                                    <div class="media-body">
                                        <ul class="user-profile-list">
                                            <li><span>Titre:</span> {{ user.job }}</li>
                                            <li><span>Nom:</span> {{ user.name }}</li>
                                            <li><span>Prénom:</span> {{ user.firstname }}</li>
                                            <li><span>Specialisation:</span> {{ user.specialization }}
                                            </li>
                                            <li><span>N° Inami:</span> {{ user.inamiNumber }}</li>
                                            <li><span>Email:</span><a href="mailto:{{ user.email }}">{{ user.email }}</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <h5 class="text-center"> Aucun résultat</h5>
                        {% endfor %}
                        <div class="text-right">
                            <button class="btn btn-main btn-small btn-round"><a class="white" href="{{ url('adminSearchUserIndex')}}">Retour</a></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

