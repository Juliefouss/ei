{% extends 'layout/admin.html.twig' %}


{% block content %}
    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="content">
                        <h1 class="page-name"> Messages</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="user-dashboard page-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <img class="img-responsive" src="{{ asset('images/PhotoMessage.jpg') }}" alt="photo message">
                </div>
                <div class="col-md-7">
                    <div class="dashboard-wrapper user-dashboard">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Pr√©nom</th>
                                    <th>Objet</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for delete_message in delete_messages %}
                                                <tr>
                                                    <td>{{ delete_message.author.name }} {{ delete_message.author.firstname }}</td>
                                                    <td>{{ delete_message.HourlyId }}</td>
                                                    <td>
                                            <form method="post"
                                                  action="{{ path('app_delete_message_delete', {'id': delete_message.id}) }}"
                                                  onsubmit="return confirm('Supprimer ce message?');">
                                                <input type="hidden" name="_token"
                                                       value="{{ csrf_token('delete' ~ delete_message.id) }}">
                                                <button class="btn btn-transparent">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">Pas de message </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}


