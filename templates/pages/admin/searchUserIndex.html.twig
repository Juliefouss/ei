{% extends 'layout/admin.html.twig' %}

{% block content %}
    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="content">
                        <h1 class="page-name"> Médecins</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="page-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="padding">
                            <aside class="sidebar">
                                <div class="widget widget-subscription">
                                    <h4 class="widget-title">Rechercher un médecin</h4>
                                </div>
                                {% set searchUserForm = getSearchUserForm() %}
                                {{ form_start(searchUserForm) }}
                                {{ form_widget(searchUserForm.keyword) }}
                                {{ form_end(searchUserForm) }}

                            </aside>
                        </div>
                    </div>
                    <div class="col-md-8 ">
                        {% for user in users %}
                            {% if loop.index0 % 3==0 %}
                                <div class="row">
                            {% endif %}
{{ include('pages/include/profilUser.html.twig') }}
                            {% if loop.index0 % 3==3 %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
