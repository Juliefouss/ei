{% extends 'layout/admin.html.twig' %}

{% block content %}

    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="content">
                        <h1 class="page-name"> Demande d'annonce</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="user-dashboard page-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <img class="img-responsive" src="{{ asset('images/PhotoHoraire.jpg') }}" alt="photo message">
                </div>
                <div class="col-md-7">
                    <div class="dashboard-wrapper user-dashboard">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Exp√©diteur</th>
                                    <th>Date</th>
                                    <th>Horaire</th>
                                    <th>Service</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for hourly_request in hourly_requests %}
                                    <tr>
                                        <td>{{ hourly_request.user.name }}
                                        {{ hourly_request.user.firstname }}</td>
                                        <td>{{ hourly_request.date ? hourly_request.date|date('d-m-Y') : '' }}</td>
                                        <td>{{ hourly_request.hour }}</td>
                                        <td>{{ hourly_request.service.name }}</td>
                                        <td>
                                            <a href="{{ path('app_hourly_new', {'id': hourly_request.id}) }}">Ajouter</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
